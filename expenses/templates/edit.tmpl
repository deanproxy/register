<div data-role="header">
    <h1>Edit Expense</h1>
    <a href="#" data-role="back" data-rel="back" data-icon="back">Cancel</a>
    <a href="#" id="save-btn" data-role="button" data-rel="save" data-icon="check" class="ui-btn-right">Save</a>
  </div>

  <div data-role="content">
    <form name="update" id="update-expense" method="post" action="#">
      <ul id="update-list" data-role="listview" data-inset="true">
          <li>
              <label for="desc" class="ui-hidden-accessible">Description:</label>
              <input type="text" name="description" class="required" placeholder="Item Description" id="desc" value="{{expense.description}}">
          </li>
          <li>
              <label for="amount" class="ui-hidden-accessible">Amount:</label>
              <input type="number" name="amount" placeholder="$0.00" class="required number" id="amount" step="0.01" value="{{expense.amount}}">
          </li>
          <li>
              <select name="deposit" id="deposit" data-role="slider" data-mini="true">
                  <option value="off">No</option>
                  <option value="on" {{#if expense.deposit}}selected=""{{/if}}>Yes</option>
              </select>
              <label for="deposit">Deposit?</label>
          </li>
      </ul>
      {{#if expense.amount}}
        <button type="submit" data-rel="delete" id="delete-btn" data-theme="c">Delete Expense</button>
      {{/if}}
    </form>
  </div>
